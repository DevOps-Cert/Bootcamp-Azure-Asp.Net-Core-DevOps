{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",

  /********* PARAMETERS *********/
  "parameters": {
    "appName": {
      "type": "string",
      "defaultValue": "gab2017msdevmtl",
      "metadata": {
        "description": "The base name of the solution from which Azure Resources names will be extrapolated."
      }
    }
  },
  /********* VARIABLES *********/
    "variables": {

      "location": "[resourceGroup().location]",

      "lowerCaseAppName": "[toLower(parameters('appName'))]",

      "appServicePlan": {
        "name": "[concat(parameters('appName'),'ServicePlan')]",
        "sku": "F1",
        "numberOfWorkers": 1
      },

      "webApp": {
        "name": "[concat(variables('lowerCaseAppName'),'WebApp')]"
      },

      "storage": {
        "name": "[concat(variables('lowerCaseAppName'),'storage')]",
        "accountType": "Standard_LRS"
      },

      "documentDB": {
        "name": "[parameters('appName')]",
        "consistencyLevel": "Session"
      },

      "appInsights": {
        "name": "[parameters('appName')]",
        "location": "East US" // APP Insights closest data center is East US at the time of writing this template.
      }
    },

    /********* ROOT RESOURCES *********/

    "resources": [

      /********* STORAGE *********/
      {
        "type": "Microsoft.Storage/storageAccounts",
        "name": "[variables('storage').name]",
        "apiVersion": "2016-01-01",
        "location": "[variables('location')]",
        "tags": {
          "syncAssets": "true"
        },
        "sku": {
          "name": "[variables('storage').accountType]",
          "tier": "Standard"
        },
        "kind": "BlobStorage",
        "properties": {
          "accessTier": "Hot"
        }
      },
      /********* DOCUMENTDB *********/
      {
        "name": "[variables('documentDB').name]",
        "type": "Microsoft.DocumentDB/databaseAccounts",
        "kind": "GlobalDocumentDB",
        "apiVersion": "2015-04-08",
        "location": "[variables('location')]",
        "tags": {},
        "properties": {
          "databaseAccountOfferType": "Standard",
          "consistencyPolicy": {
            "defaultConsistencyLevel": "[variables('documentDB').consistencyLevel]"
          },
          "name": "[variables('documentDB').name]"
        },
        "resources": [],
        "dependsOn": []
      },
      /********* APPLICATION INSIGHTS *********/
      {
        "type": "Microsoft.Insights/components",
        "apiVersion": "2014-04-01",
        "kind": "web",
        "name": "[variables('appInsights').name]",
        "location": "[variables('appInsights').location]",
        "dependsOn": [
          "[concat('Microsoft.Web/sites/', variables('webApp').name)]"
        ],
        "properties": {
          "ApplicationId": "[variables('lowerCaseAppName')]"
        }
      },
      /********* APP SERVICE PLAN *********/
      {
        "type": "Microsoft.Web/serverfarms",
        "apiVersion": "2015-08-01",
        "name": "[variables('appServicePlan').name]",
        "sku": {
          "name": "[variables('appServicePlan').sku]",
          "capacity": "[variables('appServicePlan').numberOfWorkers]"
        },

        "location": "[variables('location')]",
        "dependsOn": [],
        "properties": {
          "name": "[variables('appServicePlan').name]",
          "numberOfWorkers": "[variables('appServicePlan').numberOfWorkers]"
        }
      },
      /********* WEB APP *********/
      {
        "type": "Microsoft.Web/sites",
        "apiVersion": "2015-08-01",
        "name": "[variables('webApp').name]",
        "kind": "app",
        "location": "[variables('location')]",
        "dependsOn": [ "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlan').name)]" ],
        "properties": {
          "name": "[variables('webApp').name]",
          "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlan').name)]"
        },
        "resources": [
          {
            "name": "appsettings",
            "type": "config",
            "apiVersion": "2015-08-01",
            "dependsOn": [
              "[resourceId('Microsoft.Web/sites', variables('webApp').name)]",
            ],
            "tags": {
              "displayName": "appsettings"
            },
            "properties": {
              "appInsightInstrumentationKey": "[reference(resourceId('Microsoft.Insights/components', variables('appInsights').name), '2014-04-01').InstrumentationKey]"
            }
          }
        ]
      }
    ]
  }
